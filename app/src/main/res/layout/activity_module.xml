<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:paddingBottom="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/header_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Học lý thuyết"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- KHÁI NIỆM VÀ QUY TẮC -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#E9E9E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtTitleBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KHÁI NIỆM VÀ QUY TẮC"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDescriptionBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gồm 100 câu hỏi (20 câu điểm liệt)"
                    android:textColor="#242424"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <ProgressBar
                    android:id="@+id/progressBarBook"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtProgressBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/100"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Văn hóa và đạo đức lái xe -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEthics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#E9E9E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtTitleEthics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Văn hóa và đạo đức lái xe"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDescriptionEthics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gồm 10 câu hỏi"
                    android:textColor="#242424"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <ProgressBar
                    android:id="@+id/progressBarEthics"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="10"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtProgressEthics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/10"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Kỹ thuật lái xe -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#E9E9E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtTitleDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kỹ thuật lái xe"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDescriptionDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gồm 15 câu hỏi"
                    android:textColor="#242424"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <ProgressBar
                    android:id="@+id/progressBarDrive"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="15"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtProgressDrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/15"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Biển báo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSigns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#E9E9E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtTitleSigns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biển báo"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDescriptionSigns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gồm 90 câu hỏi"
                    android:textColor="#242424"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <ProgressBar
                    android:id="@+id/progressBarSigns"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="90"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtProgressSigns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/90"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sa hình -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#E9E9E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtTitleSimulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sa hình"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDescriptionSimulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gồm 35 câu hỏi"
                    android:textColor="#242424"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <ProgressBar
                    android:id="@+id/progressBarSimulation"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="35"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtProgressSimulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/35"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
