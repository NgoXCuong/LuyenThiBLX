<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nội dung câu hỏi -->
        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nội dung câu hỏi" />

        <!-- Các đáp án -->
        <EditText
            android:id="@+id/etOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án A" />

        <EditText
            android:id="@+id/etOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án B" />

        <EditText
            android:id="@+id/etOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án C" />

        <EditText
            android:id="@+id/etOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án D" />

        <!-- Đáp án đúng -->
        <EditText
            android:id="@+id/etAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án đúng (A/B/C/D)" />

        <!-- Giải thích -->
        <EditText
            android:id="@+id/etExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giải thích"
            android:lines="3"
            android:gravity="top"/>

        <!-- Loại câu hỏi -->
        <EditText
            android:id="@+id/etCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chủ đề / Danh mục" />

        <!-- Ảnh minh họa -->
        <EditText
            android:id="@+id/etImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link ảnh (nếu có)" />
    </LinearLayout>
</ScrollView>
